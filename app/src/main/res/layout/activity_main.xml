<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activites.MainActivity">

	<TextView
		android:id="@+id/informations_planete"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:padding="@dimen/main_padding_texte"
		android:textColor="@android:color/black"
		android:textSize="@dimen/main_taille_texte"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/bouton_planete"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@color/couleurMainFondBouton"
		android:onClick="onClickBoutonPlanete"
		android:text="@string/main_libelle_bouton"
		android:textColor="@android:color/white"
		android:textSize="@dimen/main_taille_libelle_bouton"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent" />

	<ProgressBar
		android:id="@+id/progression_planete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		app:layout_constraintBottom_toTopOf="@id/bouton_planete"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>